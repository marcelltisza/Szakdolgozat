<Page x:Class="Sudoku.UI.Views.GameView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:Sudoku.UI.Views.UserControls"
      xmlns:viewModels="clr-namespace:Sudoku.UI.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="700"
      viewModels:ViewModelLocator.AutoWireViewModel="True"
      Title="GameView"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- UPPER CONTROL ITEMS -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Button x:Name="MenuButton" 
                    Content="Menu"/>
            <Button x:Name="UndoButton" 
                    Content="Undo" 
                    Grid.Column="1"/>
            <Button x:Name="RedoButton" 
                    Content="Redo" 
                    Grid.Column="2"/>
            <Button x:Name="ResetButton" 
                    Content="Reset" 
                    Grid.Column="3"/>
            <Button x:Name="NightModeButton" 
                    Content="Night" 
                    Grid.Column="5"/>
            <Button x:Name="HintButton" 
                    Content="Hint"
                    Grid.Column="6"/>
        </Grid>

        <!-- PLAY AREA -->
        <Grid x:Name="PlayArea" 
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="260"/>
            </Grid.RowDefinitions>
            
            <Label x:Name="TimeLabel" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="5"
                   FontWeight="Bold"
                   FontSize="15"
                   Content="{Binding PlayTime}"/>
            
            <controls:SudokuGrid Grid.Row="1"
                                 Grid.Column="1"/>

            <controls:SudokuBorders Grid.Column="1"
                                    Grid.Row="1"
                                    IsHitTestVisible="False" />
            <Border Grid.Row="1"
                    Grid.Column="3"
                    BorderThickness="1.5"
                    BorderBrush="Black">
                <StackPanel>
                    <Label Background="LightGray"
                           FontWeight="Bold"
                           Padding="10 10 0 5">
                        History
                    </Label>
                    <ListBox x:Name="HistoryList"
                             Background="Aqua"
                             Height="auto"/>
                </StackPanel>
            </Border>

        </Grid>

        <!-- LOWER CONTROL ITEMS -->
        <Grid Grid.Row="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140*"/>
                <ColumnDefinition Width="330*"/>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="140*"/>
            </Grid.ColumnDefinitions>
            <controls:NumberSelector x:Name="NumberSelector"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     SelectedNumber="{Binding RelativeSource={RelativeSource AncestorType=Page}, Path=DataContext.SelectedNumber, Mode=OneWayToSource}"/>
            <ToggleButton x:Name="NoteToggle" 
                          Grid.Row="1"
                          Grid.Column="3"
                          VerticalContentAlignment="Center"
                          HorizontalContentAlignment="Center" 
                          IsChecked="{Binding NoteMode, Mode=OneWayToSource}"
                          Margin="3 0" 
                          Content="Note"/>
        </Grid>

    </Grid>
</Page>
